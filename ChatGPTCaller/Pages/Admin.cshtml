@page
@model ChatGPTCaller.Pages.AdminModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Write Data</title>
    <link rel="stylesheet" href="./css/bootstrap-3.4.1-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="./css/Admin.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="./css/bootstrap-3.4.1-dist/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/57ae888bd4.js" crossorigin="anonymous"></script>
</head>
<body>
    <header class="header">
        <nav class="navbar navbar-inverse">
            <div div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="./Home">CHAT-DSA</a>
                </div>
                <ul class="nav navbar-nav">
                    <li class=""><a href="./Home">Home</a></li>
                    <li><a href="./Content">Content</a></li>
                    <li><a href="./Assistant">Assistant</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href=""><span id="usernameSpan"></span></a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle glyphicon glyphicon-user" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="./Student_infor" onclick="getSinhVien()">Information</a></li>
                            <li><a href="./Student_Update_Data">Updating</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Help</a></li>
                        </ul>
                    </li>
                    <li onclick="logout()"><a href=""><span class="glyphicon glyphicon-log-out" id="logoutButton" onclick="logout()"></span>Logout</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <!--Main-->
    <main>
        <div id="container" class="container">
            <div class="card mt-1">
                <div class="card-body">
                    <h2>Fetch Json data into a html table using jQuery</h2>
                    <p>Click the following button to fetch the data <a href="https://dummyjson.com/posts">https://dummyjson.com/posts</a></p>
                    <button class="btn btn-primary" onclick="fetchPosts()">Fetch Data</button>
                    <button class="btn btn-secondary" onclick="addProduct()">Add Product</button>
                    <a href="main.html" class="btn btn-secondary">Go to Main</a>
                </div>
                <div class="row">
                    <div id="alert-success" class="alert alert-success d-none" role="alert">
                        A simple success alert!
                    </div>
                    <div id="loading" class="d-flex justify-content-center">
                        <div id="spinner" class="spinner-border d-none" role="status">
                            <span class="sr-only"></span>
                        </div>
                    </div>

                </div>
            </div>
            <!--where to add mor table-->
            <table id="userTable" class="table table-striped table-hover"></table>
            <!--popup to be show-->
            <!-- Detail Modal Placeholder -->
            <div id="detailModal" class="modal">
                <div class="modal-content">
                    <div>
                        <span class="close-button" id="close-button">&times;</span>
                    </div>
                    <h2>Product Detail</h2>
                    <!-- Product details will be injected here -->
                    <div id="productDetail"></div>
                </div>
            </div>

            <!-- Edit Product Modal -->
            <div id="editProduct" class="editProduct">
                <div class="item-content">
                    <div>
                        <span class="edit-botton" id="closeEdit">&times;</span>
                    </div>

                    <h2>Edit Posts</h2>
                    <form id="editProductForm" id="editProductForm">
                        <div class="input-group">
                            <label for="edittitle">Title:</label>
                            <input type="text" id="edittitle" placeholder="title">
                        </div>
                        <div class="input-group">
                            <label for="edituserid">UserId:</label>
                            <input type="number" id="edituserid">
                        </div>
                        <div class="input-group">
                            <label for="edittags">Tags:</label>
                            <input type="text" id="edittags" placeholder="Tags">
                        </div>
                        <div class="input-group">
                            <label for="editreations">Reations:</label>
                            <input type="number" id="editreations">
                        </div>
                        <div class="input-group">
                            <label for="editbody">Body:</label>
                            <textarea type="text" id="editbody"></textarea>
                        </div>

                    </form>
                </div>
            </div>

        </div>

    </main>
    <footer>
        <div class="copyright text-center">
            Copyright &copy; 2024 <span>Hiu-It Chat-DSA</span>
        </div>
    </footer>

    <!-- Javascript -->
    <script type="text/javascript" src="./js/Admin.js"></script>
</body>
