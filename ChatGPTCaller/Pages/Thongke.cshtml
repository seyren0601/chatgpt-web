@page
@model ChatGPTCaller.Pages.ThongkeModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CHAT-DSA</title>
    <link rel="stylesheet" href="./css/bootstrap-3.4.1-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="./css/Admin.css">
</head>
<body>
    <header class="header">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="./Home">CHAT-DSA</a>
                </div>
                <div class="navbar-header admin" id="admin">
                    <a class="navbar-brand" href="./Admin">Administrator</a>
                </div>
                <ul class="nav navbar-nav">
                    <li class=""><a href="./Home">Home</a></li>
                    <li><a href="./Content">Content</a></li>
                    <li><a href="./Assistant">Assistant</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <!--Main-->
    <main>
        <div class="trangchu">
            <div class="card mt-1">
                <div class="card-body">
                    <h1>TRANG THỐNG KÊ</h1>
                    <h4 style="color:red">Các nội dung sau bảo mật nghiêm cấm các hành vi copy hay chỉnh sửa khi không được phép!</h4>
                    <button class="btn btn-primary" onclick="fetchtruyvan()">Thống kê truy vấn</button>    
                    <button class="btn btn-primary" onclick="fetchtruyvancauhoi()">Thống kê câu hỏi</button>
                    <button class="btn btn-primary" onclick="fetchdangnhap()">Thống kê đăng nhập</button>
                </div>
                <hr />
            </div>

            <div class="row ThongKeContent">
                <!-- Add User Modal -->
                <div id="addUser" class="col-sm-3">
                    <div class="item-content-thongke">
                        <h2>Thống Kê Truy Vấn Theo Ngày</h2>
                        <form id="adduserForm">
                            <div class="input-group">
                                <label for="editfull_name">Nhập Ngày:</label>
                                <input type="date" id="ngay">
                            </div>
                            <button class="thongketruyvan btn btn-primary" type="button" id="thongketruyvan">Tìm Kiếm</button>
                        </form>
                    </div>
                    <div class="item-content-thongke">
                        <h2>Thống Kê Truy Vấn Theo Tháng</h2>
                        <form id="adduserForm">
                                <label for="year">Năm:</label>
                                <input type="number" id="year" name="year" min="1900" max="2099" required>

                                <label for="month">Tháng:</label>
                                <input type="number" id="month" name="month" min="1" max="12" required>
                            <button class="thongketruyvanthang btn btn-primary" type="button" id="thongketruyvanthang">Tìm Kiếm</button>
                        </form>
                    </div>
                    <div class="item-content-thongke">
                        <h2>Thống Kê Đăng Nhập Theo Ngày</h2>
                        <form id="adduserForm">
                            <div class="input-group">
                                <label for="editfull_name">Nhập Ngày:</label>
                                <input type="date" id="ngay1">
                            </div>
                            <button class="thongkedangnhap btn btn-primary" type="button" id="thongkedanhnhap">Tìm Kiếm</button>
                        </form>
                    </div>

                    <div class="item-content-thongke">
                        <h2>Thống Kê Đăng Nhập Theo Tháng</h2>
                        <form id="adduserForm">
                            <label for="year">Năm:</label>
                            <input type="number" id="year1" name="year1" min="1900" max="2099" required>

                            <label for="month">Tháng:</label>
                            <input type="number" id="month1" name="month1" min="1" max="12" required>
                            <button class="thongkedangnhapthang btn btn-primary" type="button" id="thongkedangnhapthang">Tìm Kiếm</button>
                        </form>
                    </div>
                </div>

                <!--where to add more tablerow-->
                <div class="col-sm-9">
                    <h1>Thống Kê Chi tiết:</h1>
                    <table id="userTable" class="table table-striped table-hover"></table>
                    
                </div>
            </div>
            
        </div>
    </main>
    <footer>
        <div class="copyright text-center">
            Copyright &copy; 2024 <span>Hiu-It Chat-DSA</span>
        </div>
    </footer>
    <script src="./js/jquery-3.7.1.min.js"></script>
    <script src="https://kit.fontawesome.com/57ae888bd4.js" crossorigin="anonymous"></script>
    <script src="./js/thongke.js"></script>
</body>
</html>
